@model IEnumerable<WebApplication4.Models.concentrado>
@{
    /**/

    ViewBag.Title = "Concentrado Total";
    ViewBag.Controlador = "Lista";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="box box-primary box-solid">
    <div class="box-header with-border">
        <div class="box-title">Busqueda avanzada</div>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="form-group col-md-12">
                <h4><b>Titulo:</b></h4>
                <input id="nombreSearch" type="text" placeholder="Insertar Titulo" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <h4><b>Año:</b></h4>
                    <div class="input-daterange" id="datepicker">
                        <div class="input-group">
                            <input type="number" id="min" class="form-control" name="start" />
                            <span class="input-group-addon">al</span>
                            <input type="number" id="max" class="form-control" name="end" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <div class="form-group">
                    <h4><b>Autor:</b></h4>
                    <input id="autorSearch" type="text" placeholder="Insertar autor" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                <h4><b>Tipo de Material:</b></h4>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Articulos
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Trabajos Presentados
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Libros
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Capitulos de Libros
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Proyectos
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <h4><b>Grupo Académico</b></h4>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="checkgroup" value="1"> Nanomateriales
                        </label>
                    </div>                    
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="checkgroup" value="2"> Dispositivos y Circuitos Integrados
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="checkgroup" value="3"> Sistemas Hibridos: Nanoelectrónica, Nanobioelectrónica y Nanodispositivos
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="checkgroup" value="4"> Aplicaciones de materiales y nanociencia
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="box box-primary box-solid">
    <div class="box-header with-border">
        <div class="box-title">Resultados</div>
    </div>
    <div class="box-body  table-responsive">
        <table class="display table table-responsive table-bordered table-striped table-hover" id="data_con">
            <thead>
                <tr>
                    <th>
                        Titulo
                    </th>
                    <th>
                        Autores
                    </th>
                    <th>
                        Tipo de Material
                    </th>
                    <th>
                        Año
                    </th>
                    <th>
                        Grupo Académico
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @{
                                switch (item.TipoConcentrado)
                                {
                                    case 1:
                                        <a href="@Url.Action("Details","Articulos",new { id=item.IdItem })">@item.Titulo</a>
                                        break;
                                    case 2:
                                        <a href="@Url.Action("Details","CapituloLibro",new { id=item.IdItem })">@item.Titulo</a>
                                        break;
                                    case 3:
                                        <a href="@Url.Action("Details","Libro",new { id=item.IdItem })">@item.Titulo</a>
                                        break;
                                    case 4:
                                        <a href="@Url.Action("Details","Proyectos",new { id=item.IdItem })">@item.Titulo</a>
                                        break;
                                    case 5:
                                        <a href="@Url.Action("Details","Trabajos",new { id=item.IdItem })">@item.Titulo</a>
                                        break;
                                }
                            }
                        </td>
                        <td>
                            @item.Autores
                        </td>
                        <td>
                            @item.tipoconcentrado1.Nombre
                        </td>
                        <td>
                            @item.Fecha
                        </td>
                        <td>
                            <ul>
                                @foreach (var a in item.concentrado_grupos)
                                {
                                    <li>
                                        @a.grupoacademico.Nombre
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        Titulo
                    </th>
                    <th>
                        Autores
                    </th>
                    <th>
                        Tipo de Material
                    </th>
                    <th>
                        Año
                    </th>
                    <th>
                        Grupo Académico
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<div class="box box-primary box-solid">
    <div class="box-header with-border">
        <div class="box-title">Resultados</div>
    </div>
    <div class="box-body">
        <ul class="products-list product-list-in-box">

            @foreach (var item in Model)
            {
                <li class="item">
                    <div class="product-info">
                        <div class="product-title">
                            @{
                                switch (item.TipoConcentrado)
                                {
                                    case 1:
                                        <a href="@Url.Action("Details","Articulos",new { id=item.IdItem })">@item.Titulo</a>
                                        break;
                                    case 2:
                                        <a href="@Url.Action("Details","CapituloLibro",new { id=item.IdItem })">@item.Titulo</a>
                                        break;
                                    case 3:
                                        <a href="@Url.Action("Details","Libro",new { id=item.IdItem })">@item.Titulo</a>
                                        break;
                                    case 4:
                                        <a href="@Url.Action("Details","Proyectos",new { id=item.IdItem })">@item.Titulo</a>
                                        break;
                                    case 5:
                                        <a href="@Url.Action("Details","Trabajos",new { id=item.IdItem })">@item.Titulo</a>
                                        break;
                                }
                            }
                        </div>
                        @item.Autores  <br />
                        Año: @item.Fecha | <b> @item.tipoconcentrado1.Nombre </b>
                        <span class="product-description">
                            <ul>
                                @foreach (var a in item.concentrado_grupos)
                                {
                                    <li>
                                        @a.grupoacademico.Nombre
                                    </li>
                                }
                            </ul>
                        </span>
                    </div>
                </li>
                                }

        </ul>
    </div>
</div>


