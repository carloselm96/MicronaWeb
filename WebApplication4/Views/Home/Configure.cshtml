
@{
    ViewBag.Title = "Configuración de la Aplicación";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Tipos de Articulo</h3>
            </div>
            <div class="box-body table-responsive">
                <p>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-nuevo" data-whatever="1">
                        Nuevo Tipo de Artículo
                    </button>
                </p>
                <table class="display table table-responsive table-bordered table-striped table-hover datat">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.tipos_art != null)
                        {
                            foreach (var s in ViewBag.tipos_art)
                            {
                                <tr>
                                    <td>
                                        @s.Nombre
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal" data-whatever="@s.idTipoArticulo" data-w2="@s.Nombre" data-tipo="1">Editar</button>
                                    </td>
                                    <td>
                                       <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modal-delete" data-whatever="@s.idTipoArticulo" data-tipo="1">Eliminar</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Tipos de Trabajo</h3>
            </div>
            <div class="box-body table-responsive">
                <p>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-nuevo" data-whatever="2">
                        Nuevo Tipo de Trabajo
                    </button>
                </p>
                <table class="display table table-responsive table-bordered table-striped table-hover datat">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.tipos_tra != null)
                        {
                            foreach (var s in ViewBag.tipos_tra)
                            {
                                <tr>
                                    <td>
                                        @s.Nombre
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal" data-whatever="@s.idTipoTrabajo" data-nombre="@s.Nombre" data-tipo="2">Editar</button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modal-delete" data-whatever="@s.idTipoTrabajo" data-tipo="2">Eliminar</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Tipos de Libro</h3>
            </div>
            <div class="box-body table-responsive">
                <p>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-nuevo" data-whatever="3">
                        Nuevo Tipo de Libro
                    </button>
                </p>
                <table class="display table table-responsive table-bordered table-striped table-hover datat">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.tipos_lib != null)
                        {
                            foreach (var s in ViewBag.tipos_lib)
                            {
                                <tr>
                                    <td>
                                        @s.Nombre
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal" data-whatever="@s.idTipoLibro" data-w2="@s.Nombre" data-tipo="3">Editar</button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modal-delete" data-whatever="@s.idTipoLibro" data-tipo="3">Eliminar</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="exampleModalLabel">Editar</h4>
                </div>
                <div class="modal-body">
                    <form id="edit_form" action="@Url.Action("editarTipo")">
                        <div class="form-group">
                            <input hidden type="text" name="tipo" id="tipoEd" required />
                            <input hidden type="text" id="idEd" name="id" required />
                            <label for="recipient-name" class="col-form-label">Nombre</label>
                            <input type="text" class="form-control" id="recipient-name" name="nombre" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" id="guardarForm">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-nuevo">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Nuevo tipo</h4>
            </div>
            <div class="modal-body">
                <form id="new_form" action="@Url.Action("nuevoTipo")">
                    <div class="form-group">
                        <input type="text" hidden name="tipo" id="type" required />
                        <label class="control-label">Nombre</label>
                        <input type="text" class="form-control" name="nombre" required/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="submitForm">Guardar</button>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="modal-delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="exampleModalLabel">Eliminar</h4>
                </div>
                <div class="modal-body">
                    <form id="delete_form" action="@Url.Action("eliminarTipo")">
                        <div class="form-group">
                            <input hidden type="text" id="idE" name="id" />
                            <input hidden type="text" id="typeE" name="tipo" />
                            <h3>Eliminar este tipo eliminará todos los objetos asignados a el, ¿está seguro de continuar?</h3>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="eliminarForm">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/modalScript.js"></script>