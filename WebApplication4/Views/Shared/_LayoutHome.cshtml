
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sistema MICRONA | Dashboard</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Content/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/bundles/styles")
    <link href="~/Content/bower_components/font-awesome/css/font-awesome.min.css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/DataTables/datatables.min.css" rel="stylesheet" />

    <style>
        .select2 {
            width: 100% !important;
        }
    </style>


    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" runat="server" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue-light fixed layout-top-nav">

    <div class="wrapper">

        <header class="main-header">
            <nav class="navbar navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        <a href="@Url.Action("Index","Home",null)" class="navbar-brand"><b>Repositorio</b>MICRONA</a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse pull-right" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            @{
                                if (Request.Cookies["userInfo"] != null)
                                {
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Request.Cookies["userInfo"]["nombre"]<span class="caret"></span></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="@Url.Action("Index","Perfil",null)">Perfil</a></li>
                                            <li><a href="@Url.Action("Logout","Admin",null)">Cerrar Sesión</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="@Url.Action("Index","Admin",null)">Administración</a></li>

                                }
                                else
                                {
                                    <li><a href="@Url.Action("Login","Admin",null)">Ingresar</a></li>
                                }
                            }
                        </ul>
                        
                    </div>
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>
        <!-- Full Width Column -->
        <div class="content-wrapper">
            <div class="container">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>
                        Repositorio MICRONA
                    </h1>
                    
                </section>

                <!-- Main content -->
                <section class="content">
                    @RenderBody()
                    <!-- /.box -->
                </section>
                <!-- /.content -->
            </div>
            <!-- /.container -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="container">
                <div class="pull-right hidden-xs">
                    <b>Version</b> 2.4.0
                </div>
                <strong>Copyright &copy; 2014-2016 <a href="https://adminlte.io">Almsaeed Studio</a>.</strong> All rights
                reserved.
            </div>
            <!-- /.container -->
        </footer>
    </div>

    



    @Scripts.Render("~/bundles/bowercomponents")
    <script src="~/Content/DataTables/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>
    <script src="~/Content/ChartScript.js"></script>
</body>
</html>
