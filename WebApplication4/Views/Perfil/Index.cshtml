@model WebApplication4.Models.usuario

@{
    ViewBag.Title = "Detalles de Usuario";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="box">
    <div class="box-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
                Nombre de Usuario:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Usuario1)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Correo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Correo)
            </dd>

            <dt>
                Tipo de Usuario
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tipousuario1.Nombre)
            </dd>

        </dl>
    </div>
    <div class="box-footer">
        <p>
            @Html.ActionLink("Editar Perfil", "Edit", new { id = Model.idUsuario }, new { @class = "btn btn-large btn-default" })            
        </p>
    </div>
</div>

