
@{
    ViewBag.Title = "Configuración de la Aplicación";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/Content/AdminLTE/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" />
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Tipos de Articulo</h3>
            </div>
            @{
                if (ViewContext.RouteData.Values["result"] != null)
                {
                    if (ViewContext.RouteData.Values["result"].ToString() == "1")
                    {
                        <div class="alert alert-success">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Completado!</strong> Se ha realizado correctamente la acción
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Error</strong> Ha ocurrido un error al tratar de hacer la acción
                        </div>
                    }
                }
            }
            <div class="box-body table-responsive">
                <p>
                    <button type="button" class="btn btn-default newbutton" data-tipo="1">
                        Nuevo Tipo de Artículo
                    </button>
                </p>
                <table class="display table table-responsive table-bordered table-striped table-hover datat">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.tipos_art != null)
                        {
                            foreach (var s in ViewBag.tipos_art)
                            {
                                <tr>
                                    <td>
                                        @s.Nombre
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary edit" data-id="@s.idTipoArticulo" data-nombre="@s.Nombre" data-tipo="1">Editar</button>
                                    </td>
                                    <td>
                                        @using (Html.BeginForm("EliminarTipo", "Admin", FormMethod.Get, null))
                                        {
                                            <input hidden name="id" value="@s.idTipoArticulo" />
                                            <input hidden name="tipo" value="1" />
                                            <p><input type="button" class="btn  btn-large btn-danger swalalert" value="Eliminar" /></p>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
