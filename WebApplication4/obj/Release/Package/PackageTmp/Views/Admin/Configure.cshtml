<script src="~/Content/AdminLTE/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
<script src="~/Content/modalScript.js"></script>
<script>
    $('.textarea').wysihtml5();
</script>
<script>
    $(document).ready(function () {
        
        $(".newbutton").on("click", function () {
            var type = $(this).data("tipo");
            $.ajax({
                url: "@Url.Action("getModal")",
                type: "GET",
                data: { type: type, modal: "Create" },
                success: function (partialViewResult) {
                    $("#modal-wrapper").html(partialViewResult);
                    $("#modal-wrapper .modal").modal("show");
                }
            })
        });
        $(".edit").on("click", function () {
            var type = $(this).data("tipo");
            var id = $(this).data("id");
            var nombre = $(this).data("nombre");
            $.ajax({
                url: "@Url.Action("getModal")",
                type: "GET",
                data: { type: type, modal: "Edit",id:id, name:nombre },
                success: function (partialViewResult) {
                    $("#modal-wrapper").html(partialViewResult);
                    $("#modal-wrapper .modal").modal("show");
                }
            })
        });
        $(".swalalert").click(function (e) {
            e.preventDefault();
            // stop the default behavior(navigation)
            var _form = $(this).closest("form");
            //get a reference to the container form

            swal({
                title: "Esta seguro?",
                text: "Una vez eliminado este tipo se eliminaran todos los documentos asignados a el",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then((willDelete) => {
                if (willDelete) {
                    _form.submit();
                } else {
                    swal("Se ha cancelado la accion");
                }
            });
        })
    });
</script>